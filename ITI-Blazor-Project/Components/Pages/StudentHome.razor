@page "/student"

<style>
    body{
        background: linear-gradient(135deg, #a8dadc, #cdb4db);
    }
    .student-container {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background: linear-gradient(135deg, #a8dadc, #cdb4db);
        
        font-family: 'Inter', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        padding: 3rem 1rem;
        color: #374151;
    }

    .student-card {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 24px;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        max-width: 700px;
        width: 100%;
        padding: 3rem 2.5rem;
        backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.3);
        text-align: center;
        animation: fadeInUp 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.1);
    }

    .student-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: #4f46e5;
        margin-bottom: 1rem;
    }

    .student-lead {
        font-size: 1.15rem;
        color: #6b7280;
        line-height: 1.6;
        max-width: 600px;
        margin: 0 auto;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="student-container">
    <div class="student-card">
        <h2 class="student-title">Welcome to the Student Portal</h2>
        <p class="student-lead">
            Here, you can explore all available courses, enroll in any course you're interested in,
            and view the exams related to your enrolled courses.
        </p>
    </div>
</div>

