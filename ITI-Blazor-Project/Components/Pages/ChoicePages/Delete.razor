@page "/choices/delete"
@using Microsoft.EntityFrameworkCore
@using ITI_Blazor_Project
@inject IDbContextFactory<ITI_Blazor_Project.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1 class="pt-5 pb-5">Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Choice</h2>
    <hr />
    @if (choice is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Text</dt>
            <dd class="col-sm-10">@choice.Text</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">IsCorrect</dt>
            <dd class="col-sm-10">@choice.IsCorrect</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">QuestionId</dt>
            <dd class="col-sm-10">@choice.QuestionId</dd>
        </dl>
        <EditForm method="post" Model="choice" OnValidSubmit="DeleteChoice" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(choice is null)">Delete</button> |
            <a href="/choices">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Choice? choice;

    [SupplyParameterFromQuery]
    private Guid Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        choice = await context.Choices.Include(c=>c.Question).FirstOrDefaultAsync(m => m.Id == Id);

        if (choice is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteChoice()
    {
        using var context = DbFactory.CreateDbContext();
        context.Choices.Remove(choice!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/choices");
    }
}
